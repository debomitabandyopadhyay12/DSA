
#include <iostream>
using namespace std;
void print_arr(int arr[],int n)
{
    cout<<endl;
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;
}

bool is_sorted(int arr[],int n)
{
    for(int i=0;i<n-1;i++)                 //upto n-1
    {
        if(arr[i]>arr[i+1])
        {
            return false;
        }
    }
    return true;
}

int main() {
 int i,n,arr[10];
 cout<<"enter th enumber of element";
 cin>>n;
 cout<<"enter the array element-";
 for(i=0;i<n;i++)
 {
     cin>>arr[i];
 }
 print_arr(arr,n);
 bool ans=is_sorted(arr,n);
 print_arr(arr,n);
 if(ans)
 {
     cout<<"array is sorted"<<endl;
 }
 else
 {
     cout<<"not sorted";
 }
    return 0;
}
